generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model HumanMessage {
  id         Int          @id @default(autoincrement())
  createdAt  DateTime     @default(now())
  text       String
  BotMessage BotMessage[]
}

model BotMessage {
  id             Int          @id @default(autoincrement())
  createdAt      DateTime     @default(now())
  text           String
  inReplyTo      HumanMessage @relation(fields: [humanMessageId], references: [id])
  humanMessageId Int
}
