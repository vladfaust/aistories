// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())

  evmAddress Bytes @unique

  Chats    Chat[]
  Messages UserMessage[]
}

model Character {
  id Int @id @default(autoincrement())

  name            String
  about           String
  imagePreviewUrl String

  promptTemplate     String
  summarizerTemplate String? // May be the default one

  erc1155Address Bytes?
  erc1155Id      Bytes?

  Chats    Chat[]
  Messages CharacterMessage[]
}

model Chat {
  id Int @id @default(autoincrement())

  userId      Int
  characterId Int

  conversationSummary String @default("")
  conversationBuffer  String @default("[]")

  createdAt DateTime @default(now())

  User      User      @relation(fields: [userId], references: [id])
  Character Character @relation(fields: [characterId], references: [id])

  ChatSessions ChatSession[]

  UserMessages      UserMessage[]
  CharacterMessages CharacterMessage[]

  @@unique([userId, characterId])
}

model ChatSession {
  id     Int @id @default(autoincrement())
  chatId Int

  pid Int

  createdAt DateTime @default(now())
  endedAt   DateTime

  Chat Chat @relation(fields: [chatId], references: [id])
}

model UserMessage {
  id Int @id @default(autoincrement())

  chatId Int
  userId Int

  text      String
  createdAt DateTime @default(now())

  Chat Chat @relation(fields: [chatId], references: [id])
  User User @relation(fields: [userId], references: [id])
}

model CharacterMessage {
  id Int @id @default(autoincrement())

  chatId      Int
  characterId Int

  text String? // A text generation may be in progress

  finalized Boolean // Once a message is finalized, another one can be generated
  pid       Int // To track the Python process

  createdAt DateTime @default(now())

  Chat      Chat      @relation(fields: [chatId], references: [id])
  Character Character @relation(fields: [characterId], references: [id])
}
